{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb",
        "airbnb-typescript",
        "prettier",
        "next"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "tsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": ["react", "@typescript-eslint", "prettier"],
    "rules": {
        "import/extensions": 0, // Turn off "Missing file extension for ..." error (doesn't like .ts files)
        "import/prefer-default-export": 0, // Have constant files with multiple exports
        "react/function-component-definition": 0, // Doesn't like standard component structure
        "react/no-array-index-key": 0,
        "prettier/prettier": "warn",
        "react/prop-types": "off",
        "no-param-reassign": "warn"
    }
}

{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["react", "@typescript-eslint", "prettier"],
    "overrides": [
        {
            "files": [
                "*.ts", "*.tsx"
            ], // Your TypeScript files extension

            // As mentioned in the comments, you should extend TypeScript plugins here,
            // instead of extending them outside the `overrides`.
            // If you don't want to extend any rules, you don't need an `extends` attribute.
            "extends": [
                "eslint:recommended",
                "plugin:react/recommended",
                "airbnb",
                "airbnb-typescript",
                "prettier",
                "next"
            ],
            "parserOptions": {
                "ecmaFeatures": {
                    "tsx": true
                },
                "ecmaVersion": 12,
                "sourceType": "module",
                "project": "./tsconfig.json"
            }
        }
    ],
    "rules": {
        "import/extensions": 0, // Turn off "Missing file extension for ..." error (doesn't like .ts files)
        "import/prefer-default-export": 0, // Have constant files with multiple exports
        "react/function-component-definition": 0, // Doesn't like standard component structure
        "react/no-array-index-key": 0,
        "prettier/prettier": "warn",
        "react/prop-types": "off",
        "no-param-reassign": "warn"
    }
}
